<div class="form">
<h1>パスワードのリセット(PasswordReset)</h1>
<%= form_with url: password_resets_path, scope: :password_reset, local: true do |f| %>
  <p><%= f.label :email, class: "form-control" %>
     <%= f.email_field :email, class: "form-control" %></p>

  <p><%= f.submit "送信する", class: "form-btn" %></p>
<% end %>
</div>
