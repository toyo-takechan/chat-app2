<div class="form">
  <h1>ログイン</h1>
  <%= form_with(url:login_path, scope: :session, local: true) do |f| %>
  
  <p><%= f.label :email, class:"form-control"%>
     <%= f.email_field :email, class:"form-control" %></p>
  
  <p><%= f.label :password, class:"form-control" %>
    <%= f.password_field :password, class:"form-control" %></p>
  
  <p><%= f.submit"ログイン", class:"form-btn" %></p>
  <% end %>

  <p>新規ユーザーですか？<%=link_to"新規登録", signup_path %> </p>
</div>
